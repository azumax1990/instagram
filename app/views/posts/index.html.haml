%header
  .container
    = link_to new_post_path do
      = image_tag 'camera-icon.png',  width: '50px', height: '40px'
%section.timeline
  .posts
    .container
      - @posts.each do |post|
        .post
          .post-top
            .post-top-left
              .post-user-icon
                = image_tag 'user-icon.png', width: '50px', height: '50px'
            .post-top-right
              = link_to post.user.account, '#', class: 'post-user-account'
              .post-time 2021/03/18
          .post-middle
            .post-image
              .slider
                - post.images.each do |image|
                  = image_tag image, width: '100%', height: '500px'
          .post-bottom
            .post-like
              = image_tag 'like.png', width: '20px', heght: '20px' 
            .post-comment
              = image_tag 'comment.png', width: '20px', heght: '20px' 
            .post-share
              = image_tag 'share.png', width: '20px', heght: '20px' 




