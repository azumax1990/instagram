.profile-image-modal
  %p.modal-delete ×
  .profile-image-change
    %p.modal-title プロフィール写真を変更する
    = form_with(model: @profile, method: 'put', local: true) do |f|
      = f.label :avatar, '写真をアップロード', class: 'profile-modal'
      = f.file_field :avatar, class: 'image-file-modal'
    -# = link_to '写真をアップロードする', '#', class: 'profile-modal'
    = link_to 'キャンセル', '#', class: 'profile-modal', id: 'profile-modal-close'
%section
  .container.profile{data: {id: @user.id}}
    .profile-top
      .profile-left
        - if current_user.id == @user.id 
          .profile-image
            = image_tag @user.has_avatar, width: '120px', height: '120px', class: 'user-icon'
        - else
          .profile-image-wrong
            = image_tag @user.has_avatar, width: '120px', height: '120px', class: 'user-icon'
      .profile-right
        .profile-info
          %h2= @user.account
          - if current_user.id == @user.id
            .btn-follow
              = link_to 'プロフィールを編集する', edit_profile_path(@user)
          - else
            .btn-follow
              = link_to 'フォローする', '#'
        .profile-middle
          .profile-box
            %p.amount 10
            %p.info 投稿
          = link_to '#' do
            .profile-box
              %p.amount 100
              %p.info フォロワー
          = link_to '#' do
            .profile-box
              %p.amount 122
              %p.info フォロー
        - if @user&.profile&.introduction.present?
          .profile-bottom
            .profile-introduction
              %p= @user.profile.introduction
%section.profile-post-container
  .container
    .profile-posts
      - if @user.posts
        - @user.posts.each do |post|
          .profile-post{data: {id: post.id}}
            = image_tag post.images[0], width: '100%', height: '100%'

          .post-modal.hidden{class: "post-modal#{post.id}"}
            %p.modal-delete ×
            .post-modal-image
              .post-modal-left
                .slider
                  - post.images.each do |image|
                    = image_tag image, width: '100%', height: '600px'
              .post-modal-right
                .modal-account
                  = image_tag @user.has_avatar, width: '35px', height: '35px'
                  %p= @user.account
                .modal-comment-container{class: "modal-comment-container#{post.id}"}
                .comment-text-area
                  = text_area_tag :"profile_content#{post.id}", '', class: 'comment-form'
                  .btn-comment-profile{data: {id: post.id}}
                    投稿する





