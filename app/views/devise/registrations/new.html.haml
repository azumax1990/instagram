.container
  %h2 新規登録
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render "devise/shared/error_messages", resource: resource
    .field
      = f.label :account, class: 'devise-label'
      %br/
      = f.text_field :account, autofocus: true, autocomplete: "account", class: 'text'
    .field
      = f.label :email, class: 'devise-label'
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email", class: 'text'
    .field
      = f.label :password, class: 'devise-label'
      - if @minimum_password_length
        %em.devise-label
          (#{@minimum_password_length} characters minimum)
      %br/
      = f.password_field :password, autocomplete: "new-password", class: 'text'
    .field
      = f.label :password_confirmation, class: 'devise-label'
      %br/
      = f.password_field :password_confirmation, autocomplete: "new-password", class: 'text'
    = render "devise/shared/links"
    .actions
      = f.submit "CREATE ACCOUNT", class: 'btn-primary'
  
